# http://editorconfig.org
root = true

[*]
indent_style = tab
charset = utf-8
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true
quote_type = single

[package.json]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2

[*.{js,json,css,jsx,mjs}]
max_line_length = 100

[*.{diff,md}]
trim_trailing_whitespace = false

